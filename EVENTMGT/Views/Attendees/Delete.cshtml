@model EVENTMGT.Models.Attendee

@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <h2>Delete</h2>
    <div class="alert alert-danger" role="alert">
        <strong>Warning!</strong> Are you sure you want to delete this attendee?
    </div>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Attendee Details</h4>
            <hr />
            <dl class="dl-horizontal">
                <b>Names</b>
                <dd>@Html.DisplayFor(model => model.fullName)</dd>

                <b>Phone number</b>
                <dd>@Html.DisplayFor(model => model.phone)</dd>

                <b>Email</b>
                <dd>@Html.DisplayFor(model => model.email)</dd>

                <b>Address</b>
                <dd>@Html.DisplayFor(model => model.address)</dd>
            </dl>
        </div>
    </div>
    <hr />
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    }
</div>
