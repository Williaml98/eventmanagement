@model EVENTMGT.Models.Registration

@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Login</h3>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(model => model.email, htmlAttributes: new { @class = "control-label" })
                            <div>
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.pwd, htmlAttributes: new { @class = "control-label" })
                            <div>
                                @Html.EditorFor(model => model.pwd, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                @Html.ValidationMessageFor(model => model.pwd, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div>
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    @Html.ActionLink("Register", "Create", null, new { @class = "btn btn-secondary" })
                </div>
            </div>
        </div>
    </div>
</div>